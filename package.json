{
  "name": "lincolnhighway",
  "version": "1.0.0",
  "description": "a website documenting Reed's road trip along the Lincoln Highway, the 'Main Street across America'",
  "author": "Reed Piernock",
  "license": "GPL-3.0-only",
  "repository": "https://github.com/reedcodes/lincolnhighway",
  "keywords": [],
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "a11y-color-tokens": "^0.5.0",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "npm-run-all": "^4.1.5"
  },
  "main": "gulpfile.js",
  "scripts": {
    "tokens": "npx a11y-color-tokens --colorTokensPath='source/_data/colors.js' --outputDirPath='source/assets/sass/colors' --compatibilityDocsPath='source/assets/sass/colors'",
    "build:sass": "gulp sass",
    "build:eleventy": "npx @11ty/eleventy",
    "build": "npm-run-all tokens build:sass build:eleventy"
  }
}
