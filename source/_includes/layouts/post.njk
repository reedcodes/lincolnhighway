{%- extends "layouts/default.njk" -%}

{%- from "post/header.njk" import postHeader with context -%}

{%- set main_page_class = "narrow" -%}

{%- block title_content -%}
  {{- postHeader(
      post_page = true,
      post_date = date,
      post_title = title,
      post_title_heading = "h1",
      post_title_link = false,
      post_category = category,
      post_tags = tags
  ) -}}
{%- endblock title_content -%}

{%- block page_hero -%}
  {%- if feature -%}
    <section class="container container-wide feature-image" aria-label="feature image">
      <div class="container feature-image-inner">
        <figure>
          {%- image src=feature.file, alt=feature.alt -%}
          {%- if feature.credit -%}
            <figcaption class="bg-foreground">Photo credit: <a href="{{- feature.credit.link -}}">{{- feature.credit.name -}}</a></figcaption>
          {%- endif -%}
        </figure>
      </div>
    </section>
  {%- endif -%}
{%- endblock page_hero -%}

{%- block pagination -%}
  {% include "partials/pagination.njk" %}
{%- endblock pagination -%}
