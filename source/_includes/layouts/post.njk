{%- extends "layouts/default.njk" -%}

{%- from "post/feature-image.njk" import featureImagePost with context -%}

{%- set main_page_class = "narrow" -%}
{%- set post_title_link = false -%}

{%- set post_date = date -%}
{%- set post_url = url -%}
{%- set post_title = title -%}
{%- set post_teaser = teaser -%}
{%- set post_category = category -%}
{%- set post_tags = tags -%}

{%- block title_content -%}
  {%- include "post/header.njk" -%}
{%- endblock title_content -%}

{%- block page_hero -%}
  {%- if feature -%}
    {{ featureImagePost( feature ) }}
  {%- endif -%}
{%- endblock page_hero -%}

{%- block pagination -%}
  {% include "partials/pagination.njk" %}
{%- endblock pagination -%}
