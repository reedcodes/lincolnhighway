<!doctype html>

<html>
<head>
  {%- include "partials/head.njk" -%}
</head>
<body>

  <header class="header wrapper" id="header" aria-label="site intro">
    <div class="container">
      {%- include "partials/header.njk" -%}
    </div>
  </header>

  <main class="main wrapper" id="main" aria-label="body content">
    <div class="container">

      {%- if home -%}
        <h1 class="title h3 color-primary">{{- title -}}</h1>
        <p class="subtitle h1">{{- subtitle -}}</p>
      {%- else -%}
        {% block title_content %}
          <h1>{{- title -}}</h1>
        {% endblock title_content %}
      {%- endif -%}

      {% block main_content %}
        {{ content | safe }}
      {% endblock main_content %}

      {%- if not home -%}
        {%- include "partials/tag-list.njk" -%}
      {%- endif -%}

    </div>
  </main>

  <footer class="footer wrapper" id="footer" aria-label="site information">
    <div class="container">
      {%- include "partials/footer.njk" -%}
    </div>
  </footer>

<script async src="//embedr.flickr.com/assets/client-code.js" charset="utf-8"></script>
</body>
</html>
