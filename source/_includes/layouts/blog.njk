{%- extends "layouts/default.njk" -%}

{%- from "post/list.njk" import postList with context -%}

{%- set sidebar = true -%}

{%- block title_content -%}
  <section class="container blog-header">
    <h1 class="post-list-title">{{- title -}}</h1>
  </section>
{%- endblock title_content -%}

{%- block main_content -%}
  {{ content | safe }}

  <div class="post-list-intro sidebar">
    {% include "post/feature-post.njk" %}
    {% include "post/category-list.njk" %}
  </div>

  {{- postList(
      post_list = pagination.items,
      post_show_from = 2
  ) -}}
{%- endblock main_content -%}

{%- block pagination -%}
  {% include "partials/pagination.njk" %}
{%- endblock pagination -%}
