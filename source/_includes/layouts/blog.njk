{%- extends 'layouts/default.njk' -%}

{%- block main_content -%}
  {{ content | safe }}

  {%- for post in collections.blogPosts | reverse -%}
    <article>
      {%- if post.data.feature -%}
        <img src="{{ post.data.feature.src }}" alt="{{ post.data.feature.alt }}"/>
      {%- endif -%}
      <header>
        <p>{{ post.data.date | shortDate }}</p>
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      </header>
      {%- if post.data.teaser -%}
        <div>
          {{ post.data.teaser | safe }}
        </div>
      {%- endif -%}
    </article>
  {%- endfor -%}
{%- endblock main_content -%}
