{%- extends 'layouts/default.njk' -%}

{%- block main_content -%}
  {%- for post in collections.category | reverse -%}
    <article>
      {%- if post.data.feature -%}
        <img src="{{ post.data.feature.src }}" alt="{{ post.data.feature.alt }}"/>
      {%- endif -%}
      <header>
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p>{{ post.data.date | readDate }}</p>
      </header>
      {%- if post.data.excerpt -%}
        <div>
          {{ post.data.excerpt | safe }}
        </div>
      {%- endif -%}
    </article>
  {%- endfor -%}
{%- endblock main_content -%}
