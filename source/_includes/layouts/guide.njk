<!doctype html>

<html>
<head>
  {%- include "global/head.njk" -%}
  <link rel="stylesheet" media="screen" href="{{ site.assets.css }}guide.css" />
</head>
<body>

  <nav class="nav wrapper" id="menu-guide" aria-label="style guide links">
    <div class="container">
      <ul class="menu-list" role="list">
        {% for page in collections.guide %}
          <li class="menu-list-item">
            <a class="menu-list-link" href="{{ page.url | url }}">
              {{ page.data.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </nav>

  <main class="main wrapper" id="main" aria-label="style guide content">
    <div class="container">
      <h1>{{- title -}}</h1>

      {{ content | safe }}
    </div>
  </main>

</body>
</html>
