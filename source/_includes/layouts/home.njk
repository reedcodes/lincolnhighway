{%- extends "layouts/default.njk" -%}

{%- set post_list = collections.blogPosts -%}

{%- block main_content -%}
  <section class="hero-home" aria-labelledby="hero-title">
    <header>
      <p>{{ hero.eyebrow }}</p>
      <h1 id="hero-title">{{ hero.title }}</h1>
    </header>

    <div class="hero-content">
      {{ content | safe }}
    </div>

    <div class="hero-image">
      {% image hero.source, hero.alt %}
    </div>
  </section>

  {%- include "partials/social.njk" -%}

  {%- include "partials/dashboard.njk" -%}

  {%- include "post/list.njk" -%}
{%- endblock main_content -%}
