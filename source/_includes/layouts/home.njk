{%- extends "layouts/default.njk" -%}

{%- set body_classes = body_classes + " body-home" -%}
{%- set main_container_classes = "-wide" -%}

{%- set post_list = collections.blogPosts -%}

{%- block main_content -%}
  <section class="hero-home" aria-labelledby="hero-title">
    <header>
      <p>{{ hero.eyebrow }}</p>
      <h1 id="hero-title">{{ hero.title }}</h1>
    </header>

    <div class="hero-content">
      {{ content | safe }}
    </div>

    <div class="hero-image">
      {% image hero.source, hero.alt %}
    </div>
  </section>

  <div class="greetings">
    {%- include "maps/google-route.njk" -%}

    <div class="card greeting">
      <p>{{ greetings.date | shortDate }}</p>
      <h2>Greetings from {{ greetings.location }}!</h2>
      <p>{{ greetings.greeting }}</p>
    </div>
  </div>

  {%- include "partials/social.njk" -%}

  {%- include "partials/dashboard.njk" -%}

  {%- include "post/list.njk" -%}

  {%- include "partials/stats.njk" -%}
{%- endblock main_content -%}
