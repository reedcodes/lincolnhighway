<header>
  <p>{{ post_date | shortDate }}</p>
  <h1>{{ post_title }}</h1>
</header>

{%- if post_category -%}
  <p>category: {{ post_category }}</p>
{%- endif -%}

{%- if post_tags -%}
  <p>tags:
    {% for tag in post_tags -%}
      {%- if not loop.last -%}<a href="/blog/tag/{{ tag | slug }}/">{{ tag }}</a>, {% else -%} <a href="/blog/tag/{{ tag | slug }}/">{{ tag }}</a>{%- endif -%}
    {%- endfor -%}
  </p>
{%- endif -%}

{%- if post_teaser -%}
  <p>{{ post_teaser | safe }}</p>
{%- endif -%}
