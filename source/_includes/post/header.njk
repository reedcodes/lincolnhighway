{%- macro postHeader(
    post_page = false,
    post_title
) -%}

  <section class="{{- "container container-full bg-primary" if post_page }} post-header">
    <div class="{{- "container container-narrow" if post_page }} post-header-inner">
    
      <h2 class="post-title">{{- post_title -}}</h2>
    
    </div>
  </section>

{%- endmacro -%}
