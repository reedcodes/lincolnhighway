{%- set post_title_heading = post_title_heading | default( "h3" ) -%}
{%- set post_tags_show = post_tags_show | default( false ) -%}

<header>
  <p><span class="sr-only">Posted on</span> {{ post_date | shortDate }}</p>
  
  <{{- post_title_heading -}}>{{ post_title }}</{{- post_title_heading -}}>

  {%- if post_category -%}
    <p><a href="/blog/category/{{ post_category | slug }}/"><span class="sr-only">Category:</span> {{ post_category }}</a></p>
  {%- endif -%}

  {%- if post_tags -%}
    {%- include "post/tag-list.njk" -%}
  {%- endif -%}
</header>
