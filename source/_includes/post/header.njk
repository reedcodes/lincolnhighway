{%- set post_title_heading = post_title_heading | default("h2") -%}
{%- set post_category_show = post_category_show | default(true) -%}
{%- set post_tags_show = post_tags_show | default(true) -%}

<header class="post-header">
  <p class="post-date">
    Posted on {{ post_date | shortDate }}
    {% if post_category and post_category_show %}
      in <a class="post-term-link" href="/blog/category/{{ post_category | slug }}/">{{ post_category }}</a>
    {%- endif -%}
  </p>
  
  <{{- post_title_heading }} class="post-title{{ " h1" if post_feature_post }}">{{ post_title }}</{{- post_title_heading -}}>

  {%- if post_tags and post_tags_show -%}
    <dl class="post-taxonomy">
      <dt class="hide-on-screen">Tags</dt>
      {% for tag in post_tags -%}
        <dd class="post-term"><a class="post-term-link btn btn-secondary" href="/blog/tag/{{ tag | slug }}/">{{ tag }}</a></dd>
      {%- endfor -%}
    </dl>
  {%- endif -%}
</header>
