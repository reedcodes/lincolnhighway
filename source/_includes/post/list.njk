{%- macro postList(
    post_list,
    post_max
) -%}
  <p>Here go a post list.</p>

  {%- for post in post_list -%}
    {%- if post_max -%}
      {%- if loop.index <= post_max -%}
        <p>this list has a post max</p>
      {%- endif -%}
    {%- else -%}
      <p>Just show it all.</p>
    {%- endif -%}
  {%- endfor -%}
{%- endmacro -%}
